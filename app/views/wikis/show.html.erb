  <div class="container">
    <div class="row">
      <div class="col-md text-center">
        <p>
          <h1 class="display-5 text-center"><%= @wiki.title %></h1>
        </p>
        <br />
        <div class="row mx-auto">
          <div class="card col-md pb-5">
           <%= @wiki.body %>
          </div>
          <br />
        </div>
		<% if policy(@wiki).edit? %>
		<%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
		<% end %>
		<% if policy(@wiki).destroy? %>
		<%= link_to "Delete Post", @wiki, method: :delete,  class: 'btn btn-success', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
		<% end %>
      </div>
    </div>
  </div>



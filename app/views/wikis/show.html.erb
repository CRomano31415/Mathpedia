  <div class="container">
    <div class="row">
      <div class="col-md text-center">
        <p>
          <h1 class="display-5 text-center"><%= markdown(@wiki.title) %></h1>
        </p>
        <br />
        <div class="row mx-auto">
          <div class="card col-md pb-5">
           <%= markdown(@wiki.body) %>
          </div>
          <br />
        </div>
    		<% if policy(@wiki).edit? %>
    		<%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    		<% end %>
    		<% if policy(@wiki).destroy? %>
    		<%= link_to "Delete Post", @wiki, method: :delete,  class: 'btn btn-success', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    		<% end %>
      </div>
      <div class="col-md-8">
      <h4>Collaborators:</h4>
       <% @wiki.collaborations.each do |c| %>
         <%= c.user.email %>
         <%= link_to "Delete Collaboration", [@wiki,c], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this collaboration?'} %>
       <% end %>
      </div>
    </div>
  </div>


